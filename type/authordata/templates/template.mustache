{{!
    @template mod_customlabel/authordata

    Classes required for JS:
    * no classes

}}
<!-- customlabeltype_authordata/template -->
{{> mod_customlabel/start }}
    <table width="100%">
        {{#tablecaption}}
        <tr>
            <td class="custombox-title {{labelclass}}" colspan="2">
                {{{tablecaption}}}
            </td>
        </tr>
        {{/tablecaption}}

        <tr>
            <td class="custombox-param {{labelclass}}">
                {{#str}}author, customlabeltype_authordata{{/str}}{{#hasmany}}s{{/hasmany}}
            </td>
            <td class="custombox-value {{labelclass}}">
                {{#authors}}
                {{#thumb}}
                <img src="{{{thumb}}}" title="{{{author}}}" style="float:right" width="80"  height="120"/>
                {{/thumb}}

                {{{authorname}}}

                {{#showinstitution}}
                - <span class="authordata-institution">{{institution}}</span>
                {{/showinstitution}}

                {{#showdepartment}}
                 (<span class="authordata-department">{{department}}</span>)
                {{/showdepartment}}
                <br/>
                {{/authors}}
            </td>
        </tr>

        {{#showinstitution}}
        {{#institution}}
        <tr>
            <td class="custombox-param {{labelclass}}">
                {{#str}}institution{{/str}}
            </td>
            <td class="custombox-value {{labelclass}}">
                {{{institution}}}
            </td>
        </tr>
        {{/institution}}
        {{/showinstitution}}

        {{#showdepartment}}
        {{#department}}
        <tr>
            <td class="custombox-param {{labelclass}}">
                {{#str}}department{{/str}}
            </td>
            <td class="custombox-value {{labelclass}}">
                {{{department}}}
            </td>
        </tr>
        {{/department}}
        {{/showdepartment}}

        {{#showcontributors}}
        <tr>
            <td class="custombox-param {{labelclass}}">
                {{#str}}contributors, customlabeltype_authordata{{/str}}
            </td>
            <td class="custombox-value {{labelclass}}">
                {{{contributors}}}
            </td>
        </tr>
        {{/showcontributors}}

    </table>
{{> mod_customlabel/end }}
