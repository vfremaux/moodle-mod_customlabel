{{!
    @template mod_customlabel/remind

    Classes required for JS:
    * mod/customlabel/customlabel

}}
<!-- customlabeltype_remind/template -->
<table class="custombox-remind" width="100%">

    <tr valign="top">
        <td class="custombox-header-thumb remind" width="2%" rowspan="2">
        </td>
        <td class="custombox-header-caption remind" width="98%">
            {{#str}}remind, customlabeltype_remind{{/str}}
        </td>
    </tr>

    <tr valign="top">
        <td class="custombox-content remindtext">
            {{{remindtext}}}
        </td>
    </tr>

</table>
<!-- /customlabeltype_remind/template -->
