<!-- customlabeltype_soluce/template -->
<table class="custombox-soluce" width="100%">

    <tr valign="top">
        <td class="custombox-header-thumb soluce" width="2%" rowspan="2">
        </td>

        <td class="custombox-header-caption soluce" width="98%">
            {{#str}}soluce, customlabeltype_soluce{{/str}}
        </td>
        <td class="custombox-header-collapser soluce" align="right" width="2%">
            <img id="customctl-{{customid}}" class="customctl" src="{{{initialcontrolimageurl}}}" />
        </td>
    </tr>

    <tr>
        <td colspan="2" id="custom-{{customid}}" class="custombox-content soluce {{initialclass}}">
            {{{soluce}}}
        </td>
    </tr>

</table>
<!-- /customlabeltype_soluce/template -->
