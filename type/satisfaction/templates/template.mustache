{{!
    @template mod_customlabel/satisfaction
    Classes required for JS:
    * no classes

}}
<!-- customlabeltype_satisfaction/template -->
{{> mod_customlabel/start }}
<div class="custombox-{{labelclass}}-container">
    {{#notconfigured}}
        <div>{{{notconfigurednotification}}}</div>
    {{/notconfigured}}
    {{^notconfigured}}
    {{#graphtitle}}
    <div class="custombox-{{labelclass}}-flexline">
        <div class="custombox-header-caption {{labelclass}} {{skin}}">
            <h4>{{{graphtitle}}}</h4>
        </div>
    </div>
    <div class="custombox-{{labelclass}}-flexline">
        <h5>{{{question}}}</h5>
    </div>
    {{/graphtitle}}
    {{^graphtitle}}
    <div class="custombox-{{labelclass}}-flexline">
        <h4>{{{question}}}</h4>
    </div>
    {{/graphtitle}}

    <div class="custombox-{{labelclass}}-flexline">
        {{{satisfactiongraph}}}
    </div>
    {{/notconfigured}}
</div>
{{> mod_customlabel/end }}
<!-- /customlabeltype_satisfaction/template -->
