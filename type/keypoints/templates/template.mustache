{{!
    @template mod_customlabel/keypoints

    Classes required for JS:
    * no classes

}}
<!-- customlabeltype_keypoints/template -->
{{> mod_customlabel/start }}
    <div class="custombox-container {{labelclass}}">

        <div class="custombox-flexline {{labelclass}}">
             <div class="custombox-header-caption {{labelclass}} {{skin}}">
                <h4>{{#str}}remind, customlabeltype_keypoints{{/str}}</h4>
            </div>
        </div>

        <div class="custombox-flexline {{labelclass}}">
            <ul class="customlabel {{labelclass}}">
                {{#keypoints}}
                <li>
                    {{{keypoint}}}
                    {{#feedbackmark}}
                    <input type="checkbox" name="keypoint-{{item}}" > {{#str}}check, customlabeltype_keypoints{{/str}}
                    {{/feedbackmark}}
                </li>
                {{/keypoints}}
            </ul>
        </div>
    </div>
{{> mod_customlabel/end }}
<!-- /customlabeltype_keypoints/template -->
