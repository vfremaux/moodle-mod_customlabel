{{!
    @template mod_customlabel/formule

    Classes required for JS:
    * no classes

}}
<!-- customlabeltype_commentbox/formule -->
{{> mod_customlabel/start }}
    <div class="custombox-container {{labelclass}}">
        <div class="custombox-flexline {{labelclass}}">
            <div class="custombox-header-caption {{labelclass}} {{skin}}">
                <h4>{{#str}}statement, customlabeltype_formule{{/str}}{{#hasname}}: {{formulename}}{{/hasname}}</h4>
            </div>
        </div>

        <div class="custombox-flexline {{labelclass}}">
            <div class="custombox-formula-container">
                <div class="custombox-formula">
                    {{{formuletext}}}
                </div>
            </div>
        </div>

        {{#showdevelopment}}
        <div class="custombox-flexline {{labelclass}}">
            <div class="custombox-development-caption {{labelclass}}">
                <img id="customctl-{{{customid}}}" src="{{{initialcontrolimageurl}}}" class="customctl" /> {{#str}}development, customlabeltype_formule{{/str}}
            </div>
        </div>

        <div class="custombox-flexline {{labelclass}}">
            <div id="custom-{{{customid}}}" class="custombox-developement {{labelclass}} {{initialclass}}">
                {{{development}}}
            </div>
        </div>

        {{/showdevelopment}}

{{> mod_customlabel/end }}
<!-- /customlabeltype_commentbox/formule -->
