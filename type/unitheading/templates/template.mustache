{{!
    @template mod_customlabel/unitheading

    Classes required for JS:

}}
<!-- customlabeltype_unitheading/template -->
<table class="custombox-unitheading" width="100%">
    <tr valign="middle" class="custombox-icon unitheading">

        {{#toleft}}
        <td width="{{imagewidth}}" class="custombox-icon-left unitheading" align="center"
                   style="background:url({{{imageurl}}}) 50% 50% no-repeat transparent">
            {{overimagetext}}
        </td>
        {{/toleft}}

        <td style="{{contentpadding}}">
            <h3 class="custombox-caption unitheading">{{heading}}</h3>
            <p class="custombox-description unitheading">{{{shortdesc}}}</p>
        </td>

        {{#toright}}
        <td  width="{{imagewidth}}" class="custombox-icon-right unitheading" align="center"
                   style="background:url({{{imageurl}}}) 50% 50% no-repeat transparent">
            {{overimagetext}}
        </td>
        {{/toright}}

    </tr>
</table>