{{!
    @template mod_customlabel/definition

    Classes required for JS:
    * no classes
}}
<!-- customlabeltype_definition/template -->
<table class="custombox-definition" width="100%">
    <tr valign="top">
        <td class="custombox-header-thumb definition" style="background-image : url({{{iconurl}}});" width="2%" rowspan="2">
        </td>
        <td class="custombox-header-caption definition" width="98%">
            {{#str}}definition, customlabeltype_definition{{/str}}
        </td>
    </tr>

    <tr valign="top">
        <td class="custombox-content definition">
            {{{definition}}}
        </td>
    </tr>

    {{#hassubdefs}}
    <tr valign="top">
        <td class="custombox-foo definition" width="2%"></td>
        <td class="custombox-subdefinitions definition">
            <ul class="customlabel-subdefinition definition">
            {{#subdefs}}
                <li>{{{subdef}}}</li>
            {{/subdefs}}
            </ul>
        </td>
    </tr>
    {{/hassubdefs}}

</table>
<!-- /customlabeltype_definition/template -->
