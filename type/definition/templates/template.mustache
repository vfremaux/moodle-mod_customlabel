{{!
    @template mod_customlabel/definition

    Classes required for JS:
    * no classes
}}
<!-- customlabeltype_definition/template -->
{{> mod_customlabel/start }}
    <div class="custombox-container {{labelclass}}">
        <div class="custombox-flexline {{labelclass}}">
            <div class="custombox-header-caption {{labelclass}}" width="98%">
                <h4>{{#str}}definition, customlabeltype_definition{{/str}}</h4>
            </div>
        </div>

        <div class="custombox-flexline {{labelclass}}">
            <div>
            {{{definition}}}
            </div>
        </div>

        {{#hassubdefs}}
        <div class="custombox-flexline {{labelclass}}">
            <ul class="customlabel-subdefinition {{labelclass}}">
            {{#subdefs}}
                <li>{{{subdef}}}</li>
            {{/subdefs}}
            </ul>
        </div>
        {{/hassubdefs}}
    </div>
{{> mod_customlabel/end }}
<!-- /customlabeltype_definition/template -->
