{{!
    @template mod_customlabel/stealthactivity

    Classes required for JS:
    * mod/customlabel/customlabel

}}
<!-- customlabeltype_stealthactivity/template-->
{{#notyetconfigured}}
    {{#str}}notyetconfigured, customlabeltype_stealthactivity{{/str}}
{{/notyetconfigured}}

{{#brokenmodule}}
<div class="error">
    {{#str}}brokenmodule, customlabeltype_stealthactivity{{/str}}
</div>
{{/brokenmodule}}

{{^notyetconfigured}}
{{^brokenmodule}}
{{#singleimage}}
<div  class="custombox-stealtactivity singleimage" width="100%" data-layout="singleimage">
    <a href="{{{moduleurl}}}" {{#onclick}}onclick="{{{onclick}}}"{{/onclick}}><img src="{{{thumbnail}}}"></a>
</div>
{{/singleimage}}

{{#singleimageanddescription}}
<div  class="custombox-stealthactivity flex" data-layout="singleimage-description">
    <div class="single-image">
    <a href="{{{moduleurl}}}" {{#onclick}}onclick="{{{onclick}}}"{{/onclick}}><img src="{{{thumbnail}}}"></a>
    </div>
    <div class="description">
        {{{description}}}
    </div>
</div>
{{/singleimageanddescription}}

{{#thumbandtitle}}
<div class="custombox-stealthactivity" data-layout="thumb-title">
    <div class="custombox-header-image stealthactivity">
    <a href="{{{moduleurl}}}" {{#onclick}}onclick="{{{onclick}}}"{{/onclick}}><img class="iconlarge activityicon" src="{{{thumbnail}}}" role="presentation"></a>
    </div>
    <div class="custombox-header-caption stealthactivity">
        <a href="{{{moduleurl}}}" {{#onclick}}onclick="{{{onclick}}}"{{/onclick}}><span class="instancename">{{{title}}}</span></a>
    </div>
</div>
{{/thumbandtitle}}

{{#thumbtitleanddescription}}
<div class="custombox-stealthactivity" data-layout="thumb-title-description">
    <div class="custombox-header-caption stealthactivity">
        <a href="{{{moduleurl}}}" {{#onclick}}onclick="{{{onclick}}}"{{/onclick}}>{{{title}}}</a>
    </div>
    <div class="custombox-definition stealthactivity flex">
        <div class="single-image">
        <a href="{{{moduleurl}}}" {{#onclick}}onclick="{{{onclick}}}"{{/onclick}}><img src="{{{thumbnail}}}"></a>
        </div>
        <div class="description">
            {{{description}}}
        </div>
    </div>
</div>
{{/thumbtitleanddescription}}
{{/brokenmodule}}
{{/notyetconfigured}}
<!-- customlabeltype_stealthactivity/template -->
