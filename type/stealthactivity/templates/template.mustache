{{!
    @template mod_customlabel/stealthactivity

    Classes required for JS:
    * mod/customlabel/customlabel

}}
<!-- customlabeltype_stealthactivity/template-->
{{#singleimage}}
<div  class="custombox-stealtactivity singleimage" width="100%">
    <a href="{{{moduleurl}}}"><img src="{{{thumbnail}}}"></a>
</div>
{{/singleimage}}

{{#singleimageanddescription}}
<div  class="custombox-stealthactivity flex">
    <div class="single-image">
    <a href="{{{moduleurl}}}"><img src="{{{thumbnail}}}"></a>
    </div>
    <div class="description">
        {{{description}}}
    </div>
</div>
{{/singleimageanddescription}}

{{#thumbandtitle}}
<div class="custombox-stealthactivity">
    <div class="custombox-header-caption stealthactivity">
        <a href="{{{moduleurl}}}">{{{title}}}</a>
    </div>
    <div class="custombox-header-image stealthactivity">
    <a href="{{{moduleurl}}}"><img src="{{{thumbnail}}}"></a>
    </div>
</div>
{{/thumbandtitle}}

{{#thumbtitleanddescription}}
<div class="custombox-stealthactivity">
    <div class="custombox-header-caption stealthactivity">
        <a href="{{{moduleurl}}}">{{{title}}}</a>
    </div>
    <div class="custombox-definition stealthactivity flex">
        <div class="single-image">
        <a href="{{{moduleurl}}}"><img src="{{{thumbnail}}}"></a>
        </div>
        <div class="description">
            {{{description}}}
        </div>
    </div>
</div>
{{/thumbtitleanddescription}}
<!-- customlabeltype_stealthactivity/template -->
