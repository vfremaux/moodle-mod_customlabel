{{!
    @template mod_customlabel/instructions

    Classes required for JS:
    * no classes

}}
<!-- customlabeltype_important/instructions -->
<table class="custombox-instructions" width="100%">

    <tr valign="top">
        <td class="custombox-header-thumb instructions" style="background-image : url({{{iconurl}}});" width="2%" rowspan="2">
        </td>
        <td class="custombox-header-caption instructions" width="98%">
            {{#str}}instructions, customlabeltype_instructions{{/str}}
        </td>
    </tr>

    <tr valign="top">
        <td class="custombox-content instructions">
            {{{instructions}}}
        </td>
    </tr>

</table>
<!-- /customlabeltype_important/instructions -->
