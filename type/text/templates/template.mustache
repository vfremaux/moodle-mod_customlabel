{{!
    @template mod_customlabel/text

    Classes required for JS:
    * mod/customlabel/customlabel

}}
<!-- customlabeltype_text/template -->
<!-- standard default template for unclassed label. Don\'t change -->

<div class="custombox-text">
    {{{textcontent}}}
</div>

{{#readmorecontent}}
<div class="custombox-text readmorelink">
    <span id="customctl-{{customid}}" class="customctl-string" data-labels="{{label1}},{{label2}}">{{initialstring}}</span>
</div>

<div class="custombox-text readmore {{initialclass}}" id="custom-{{customid}}">
    {{{readmorecontent}}}
</div>
{{/readmorecontent}}
