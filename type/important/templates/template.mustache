{{!
    @template mod_customlabel/important

    Classes required for JS:
    * no classes

}}
<!-- customlabeltype_important/template -->
<table class="custombox-important" width="100%">

    <tr valign="top">
        <td class="custombox-header-thumb important" style="background-image : url({{{iconurl}}});" width="2%" rowspan="2">
        </td>
        <td class="custombox-header-caption important" width="98%">
            {{#str}}important, customlabeltype_important{{/str}}
        </td>
    </tr>

    <tr valign="top">
        <td class="custombox-content important">
            {{{importantnote}}}
        </td>
    </tr>

</table>
<!-- /customlabeltype_important/template -->
