{{!
    @template mod_customlabel/courseclassifier

    Classes required for JS:
    * no classes
}}
<!-- customlabeltype_courseclassifier/template -->
<table class="custombox-courseclassifier">
    <tr valign="top">
        <th class="custombox-title courseclassifier" colspan="2">
            {{{tablecaption}}}
        </th>
    </tr>

    {{#classifiers}}
    {{> customlabeltype_courseclassifier/classifierrow}}
    {{/classifiers}}
</table>

{{#hasotherclassifiers}}
<table class="custombox-courseclassifier other">

    <tr valign="top">
        <th class="custombox-title courseclassifier" colspan="2">
            {{#str}}otherclassifiers, customlabeltype_courseclassifier{{/str}}
        </th>
    </tr>

    {{#classifierrows}}
    {{> customlabeltype_courseclassifier/classifierrow}}
    {{/classifierrows}}

</table>
{{/hasotherclassifiers}}
<!-- /customlabeltype_courseclassifier/template -->
