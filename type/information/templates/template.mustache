    Classes required for JS:
    * no classes

}}
<!-- customlabeltype_information/template -->
{{> mod_customlabel/start }}
<div class="custombox-{{labelclass}}-container" width="100%">

    <div class="custombox-{{labelclass}}-flexline">
        <div class="custombox-header-caption {{labelclass}} {{skin}}" width="98%">
            <h4>{{#str}}information, customlabeltype_information{{/str}}</h4>
        </div>
    </div>

    <div class="custombox-flexline {{labelclass}}">
        <div>
            {{{informationtext}}}
        </div>
    </div>

</div>
{{> mod_customlabel/end }}
<!-- /customlabeltype_information/template -->
